                <h2>Uñas Spa Yaneth Jimenez</h2>
                <p>"Tu momento de belleza comienza aquí.Agendar tu cita para tener el pacer de consentirte."</p>
                <img  src="./Fondo/WhatsApp Image 2024-01-19 at 7.41.21 AM.jpeg" alt="manicure">
            </div>
            <!--Seccion de agradecimiento-->
            <div id="gracias">
                <h2> Gracias por agendar con nosotros</h2><br>
                <img src="./Fondo/images.jpeg" alt="pedicure">
            </div>
            <!-- calendario-->
            <div id="Calendario" class="calendario"> 
                <!--Seccion horarios diponibles-->
            </div>
            <div id="bloques">
                
            </div>
        </div>
        <!--Seccion iconos de redes sociales-->
            <div class="formas-informacion">
                <div class="portadaInicio">
                    <div class="formas-informacion-childs">
                        <h2 id="encabezadoAgenda">Agenda Tu Cita</h2><br>
                        <div id="redes" class="iconos">
                            <i class='bx bxl-whatsapp'></i>
                            <i class='bx bxl-tiktok'></i>
                            <i class='bx bxl-instagram'></i>
                        </div>     
                    <div id="inicio">
                        <button id="AgendaDisponible" class="botones" type="submit" onclick="agendadisponible()">Agenda Disponible
                        </button>
                        <button id="modificarcitas" class="botones" type="submit" onclick="ActualizarCita()">¿Deseas cancelar o reagendar una cita? 
                        </button>
                    </div>
                    <form id="formulario" action="/cita" method="post">
                        <div id="servicio" name="servicio" required style="display: none;">
                                <h2 id="servi" style="display: none;" >servicios</h2>
                                <div id="prose1" class="ser1">
                                    <div id="manicureBasico" class="servicios">
                                        <button type="button" onclick="seleccionarServicio('Manicure básico')">
                                            <img class="imgMani" src="./Fondo/maniBasico.jpeg" alt="Manicure básico">
                                            Manicure básico
                                        </button>
                                    </div>
                                    <div id="pedicureBasico" class="servicios">
                                        <button type="button" onclick="seleccionarServicio('Pedicure básico')">
                                            <img class="imgMani" src="./Fondo/padiBasico.jpeg" alt="Pedicure básico">
                                            Pedicure básico
                                        </button>
                                    </div>
                                    <div id="esmaltadoPermanente" class="servicios">
                                        <button type="button" onclick="seleccionarServicio('Esmaltado permanente')">
                                            <img class="imgMani" src="./Fondo/esmalPerma.jpeg" alt="Esmaltado permanente">
                                            Esmaltado permanente
                                        </button>
                                    </div>
                                </div>
                                <div id="prose2" class="ser1" >
                                    <div id="manicureFrances" class="servicios">
                                        <button type="button" onclick="seleccionarServicio('Manicure francés')">
                                            <img class="imgMani" src="./Fondo/maniFrances .jpeg" alt="Manicure francés">
                                            Manicure francés
                                        </button>
                                    </div>
                                    <div id="pedicureFrances" class="servicios">
                                        <button type="button" onclick="seleccionarServicio('Pedicure francés')">
                                            <img class="imgMani" src="./Fondo/pediFran.jpeg" alt="Pedicure francés">
                                            Pedicure francés
                                        </button>
                                    </div>
                                    <div id="unasAcrílicas" class="servicios">
                                        <button type="button" onclick="seleccionarServicio('Uñas acrílicas')">
                                            <img class="imgMani" src="./Fondo/uñasAcri.jpeg" alt="Uñas acrílicas">
                                            Uñas acrílicas
                                        </button>
                                    </div>
                                </div>  
                                <div id="prose3" class="ser1" >  
                                    <div id="unasDeGel" class="servicios">
                                        <button type="button" onclick="seleccionarServicio('Uñas de gel')">
                                            <img class="imgMani" src="./Fondo/uñasGel.jpeg" alt="Uñas de gel">
                                            Uñas de gel
                                        </button>
                                    </div>
                                    <div id="manicureSpa" class="servicios">
                                        <button type="button" onclick="seleccionarServicio('Manicure spa')">
                                            <img class="imgMani" src="./Fondo/manicuSpa.jpeg" alt="Manicure spa">
                                            Manicure spa
                                        </button>
                                    </div>
                                    <div id="pedicureSpa" class="servicios">
                                        <button type="button" onclick="seleccionarServicio('Pedicure spa')">
                                            <img class="imgMani" src="./Fondo/pediSpa.jpeg" alt="Pedicure spa">
                                            Pedicure spa
                                        </button>
                                    </div>
                                </div>
                            </div>    
                        <div id="emple">
                            <h2 id="encabeManucurista" for="manicurista">Manicuristas</h2>
                                <!-- Seccion manicuristas-->
                            <div id="manicurista1" class="Manicuristas1">
                                <div id="manicurista1" class="Manicuristas1">
                                    <div id="Aura" class="Manicu">
                                        <button type="button" onclick="seleccionarManicurista('Aura')">
                                            <img class="imgMani" src="./Fondo/Aura.jpg" alt="Aura">
                                            Aura
                                        </button>
                                    </div>
                                <div id="Leidy" class="Manicu">
                                    <button type="button" onclick="seleccionarManicurista('Leidy')">
                                        <img class="imgMani" src="./Fondo/Leidy.jpeg" alt="Leidy">
                                        Leidy
                                    </button>
                                </div>
                                <div id="Adrina" class="Manicu">
                                    <button type="button" onclick="seleccionarManicurista('Adrina')">
                                        <img class="imgMani" src="./Fondo/Adrina.jpeg" alt="Adrina">
                                        Adrina
                                    </button>
                                </div>
                                </div> 
                            </div>
                            <br>
                            <div id="manicurista2" class="Manicuristas1">
                                <div id="Deisy" class="Manicu">
                                    <button type="button" onclick="seleccionarManicurista('Deisy')">
                                        <img class="imgMani" src="./Fondo/Deisy.jpeg" alt="Deisy">
                                        Deisy 
                                    </button>
                                </div>
                                <div id="Andrea" class="Manicu">
                                    <button type="button" onclick="seleccionarManicurista(' Andrea ')">
                                        <img class="imgMani" src="./Fondo/Andrea.jpeg" alt="Andrea">
                                        Andrea 
                                    </button>
                                </div>
                                <div id="Camila" class="Manicu">
                                    <button type="button" onclick="seleccionarManicurista('Camila')">
                                        <img class="imgMani" src="./Fondo/Camila.jpg" alt="Camila">
                                        Camila 
                                    </button>
                                </div>
                                </div>
                        </div>  
                        </form>
                    </div>
                </div>
                <div id="formulario-reagendar" style="display:none;">
                    <h3>Reagendar Cita</h3>
                    <form id="form-reagendar-cita">
                        <label for="manicurista-reagendar">Manicurista:</label>
                        <select id="manicurista-reagendar">
                            <!-- Opciones de manicuristas -->
                        </select><br><br>
                        
                        <label for="servicio-reagendar">Servicio:</label>
                        <select id="servicio-reagendar">
                            <!-- Opciones de servicios -->
                        </select><br><br>
                        
                        <label for="fecha-reagendar">Fecha:</label>
                        <input type="date" id="fecha-reagendar"><br><br>
                        
                        <label for="hora-reagendar">Hora:</label>
                        <select id="hora-reagendar">
                            <!-- Opciones de horas -->
                        </select><br><br>
                        
                        <button type="button" id="guardar-reagendar">Guardar</button>
                        <button type="button" id="cancelar-reagendar">Cancelar</button>
                    </form>
                </div>
                <!--Seccion de formulario de registro-->
                
                
                <div id="mensajeria">
                    <div id="lista-citas" >
                        <!-- Aquí se mostrarán las citas -->
                    </div>
                    <div id="mensajesconfirmar">
                        <p id="mensaje1"></p>
                        <p id="mensaje2"></p>
                        <p id="confirmar"></p>
                        
                        <button id="retornar" class="botones"  type="submit" onclick="retornar()">Continua con nosotros</button>
                        <p id="mensaje4">¡Descubre más servicios y sigue disfrutando con nosotros! Presiona el botón Más Servicios ahora.</p>
                        <button id="retornarAgenda" class="botones"  type="submit" onclick="retornarAgenda()">Mas servicios</button>
                    </div>
                    <button id="AgendarCita" class="botones" type="submit" onclick="confirmardatos()">Agendar Cita</button>
                </div>
            </div>
        </div>
        <script src="Pagina_Agenda_Cita.js"></script>
